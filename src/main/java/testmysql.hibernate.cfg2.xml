		<mapping
			resource="com/boilerplate/database/mysql/implementations/MySQLMultipleChoiceQuestionOption.hbm.xml" />
		<mapping
			resource="com/boilerplate/database/mysql/implementations/MySQLQuestion.hbm.xml" />
		<mapping
			resource="com/boilerplate/database/mysql/implementations/MySQLQuestionType.hbm.xml" />

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.boilerplate.java.entities.ExternalFacingReturnedUser"
		table="Users">
		<id name="userId" column="UserId">
			<generator class="assigned" />
		</id>
		<property name="firstName" column="FirstName" />
		<property name="lastName" column="LastName" />
		<property name="email" column="Email" />
		<property name="phoneNumber" column="PhoneNumber" />
		<property name="id" column="Id" />
		<property name="middleName" column="MiddleName" />
		<property name="referalSource" column="ReferalSource" />
		<property name="campaignType" column="CampaignType" />
		<property name="campaignSource" column="CampaignSource" />
		<property name="campaignUUID" column="CampaignUUID" />
		<property name="userReferId" column="UserReferId" />
		<property name="isFeedBackSubmitted" type="boolean">
			<column name="IsFeedBackSubmitted " sql-type="tinyint" />
		</property>
		<property name="totalScore" column="TotalScore" />
		<property name="incomeTaxUuid" column="IncomeTaxUuid" />
		<property name="authenticationProvider" column="AuthenticationProvider" />
		<property name="password" column="Password" />
		<property name="crmid" column="Crmid" />
		<property name="userStatus" column="UserStatus" />
		<property name="dateOfBirth" column="DateOfBirth" />
		<property name="alternateNumber" column="AlternateNumber" />
		<property name="employmentStatus" column="EmploymentStatus" />
		<property name="location" column="Location"></property>
		<property name="isPasswordChanged" type="boolean">
			<column name="IsPasswordChanged" sql-type="tinyint" />
		</property>
		<property name="creationDate" column="CreatedDateTime" type="timestamp" />
		<property name="updationDate" column="UpdateDateTime" type="timestamp" />
		<property name="roleName" column="RoleName" />
		<property name="rank" column="Rank" />
	</class>

</hibernate-mapping>